{
    "name": "selfhost-hub",
    "version": "1.0.0",
    "description": "A curated collection of self-hosted services",
    "scripts": {
        "start": "hugo server -D",
        "build": "npm run css && hugo --minify",
        "css": "tailwindcss -i ./themes/selfhosthub/assets/scss/main.scss -o ./themes/selfhosthub/static/css/main.css",
        "css:watch": "tailwindcss -i ./themes/selfhosthub/assets/scss/main.scss -o ./themes/selfhosthub/static/css/main.css --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/songtianlun/selfhost-hub.git"
    },
    "keywords": [
        "selfhost",
        "self-hosted",
        "services",
        "hugo"
    ],
    "author": "Tianlun Song",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/songtianlun/selfhost-hub/issues"
    },
    "homepage": "https://github.com/songtianlun/selfhost-hub#readme",
    "devDependencies": {
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.16",
        "autoprefixer": "^10.4.16",
        "postcss": "^8.4.31",
        "postcss-cli": "^10.1.0",
        "tailwindcss": "^3.3.5"
    }
}
